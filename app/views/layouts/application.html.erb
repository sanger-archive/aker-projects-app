<!DOCTYPE html>
<html>
  <head>
    <title>Projects</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse" id="<%= Rails.env.downcase %>">
      <div class="container">
        <div class="navbar-header">
        <!-- Display the hamburger button if screen isn't wide enough -->
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navBar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle navbar-brand" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Aker <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Submission', Rails.configuration.urls[:submission] %></li>
                <li><%= link_to 'Permissions', Rails.configuration.urls[:permissions] %></li>
                <li><%= link_to 'Sets', Rails.configuration.urls[:sets] %></li>
                <li><%= link_to 'Projects', Rails.configuration.urls[:projects] %></li>
                <li><%= link_to 'Work Orders', Rails.configuration.urls[:work_orders] %></li>
              </ul>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse" id="navBar">
          <ul class="nav navbar-nav">
            <li><%#= link_to 'Tree', tree_node_path(@node), id: ("current-page-#{Rails.env.downcase}" if params[:action] == 'tree') %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text"><strong><%= Rails.env.upcase %></strong></li>
            <% if jwt_provided? %>
            <li><p class="navbar-text">Logged in as <%= current_user.email %></p></li>
            <li><%= link_to 'Log out', Rails.configuration.logout_url, method: :delete if Rails.configuration.logout_url %></li>
            <% else %>
            <li><%= link_to 'Log in', Rails.configuration.login_url if Rails.configuration.login_url %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid" id="content">
      <div class="row">
        <div class="col-md-8">
          <h1>WTSI Research Activity Model</h1>
        </div>
        <div class="col-md-4">
          <div type="button" class="btn btn-warning pull-right" id="reset-button" data-user-preferences-expand="true">Expand Tree</div>
        </div>
      </div>
      <%= yield %>
    </div>
    <footer style="text-align:center">
      <% if Projects::Application::VERSION.present? %>
        <%= 'Version: ' + Projects::Application::VERSION[0..6] %>
      <% end %>
    </footer>
  </body>
</html>
