<%= f.text_field :name, autocomplete: 'off', disabled: !write_permission %>
<%= f.text_field :description, disabled: !write_permission %>
<% if @node.parent&.cost_code %>
  <%= subcostcodes_select_for(@node, f, {include_blank: true}, {disabled: !write_permission}) %>
<% else %>
  <%= f.text_field :cost_code, disabled: !write_permission, autocomplete: 'off' %>
<% end %>
<%= f.hidden_field :parent_id %>
<%= f.hidden_field :id %>
<%= f.text_field :user_writers, label: "Users who can modify this project", data: { behavior: "selectize" }, disabled: !edit_permissions %>
<%= f.text_field :group_writers, label: "Groups who can modify this project", data: { behavior: "selectize" }, disabled: !edit_permissions %>
<%= f.text_field :user_spenders, label: "Users who can create, view and modify work plans on this project's budget", data: { behavior: "selectize" }, disabled: !edit_permissions %>
<%= f.text_field :group_spenders, label: "Groups who can create, view and modify work plans on this project's budget", data: { behavior: "selectize" }, disabled: !edit_permissions %>
