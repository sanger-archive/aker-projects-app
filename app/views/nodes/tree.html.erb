<div>
  <span class="node-legend" id="owned">Green articles</span> are owned by you<br>
  <span class="node-legend" id="editable">Teal articles</span> are those which you have been given permission to edit
</div>
<%= render "show", locals: { tab: 'tree' } do %>
  <div id="tree" class="tab-pane active">


    <form id="edit-panel" style="padding-top:1em;" class="form-inline">
      <div class="form-group">
        <label for="selected-node" class="selected-node-group">Selected Article:</label>
        <input type="text" readonly autocomplete="off" class="form-control" id="selected-node" class="selected-node-group" disabled="disabled">
      </div>
      &nbsp;
      <div class="form-group">
        <label for="new-node">New Article:</label>
        <input type="text" autocomplete="off" class="form-control" id="new-node">
      </div>
      &nbsp;

      <button type="button" class="btn btn-success" id="btn-add-nodes" disabled="disabled">Add Article</button>
      &nbsp;
      <button type="button" class="btn btn-danger"  id="btn-delete-nodes" disabled="disabled">Delete</button>
    </form>

      <button type="button" class="btn btn-danger" onmouseover="this.style.opacity=1;" onmouseleave="this.style.opacity=0.5;" style="top: 40px;left: 5px;opacity:0.5;" data-user-preferences-expand="true">Expand</button>
    
    <br/>

    <div class="modal fade" id="editNodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header"></div>
          <div class="modal-body text-center">
            <i class="fa fa-spinner fa-spin fa-2x fa-fw text-center"></i>
          </div>
        </div>
      </div>
    </div>

    <div id="tree-hierarchy"></div>

  </div>
<% end %>
